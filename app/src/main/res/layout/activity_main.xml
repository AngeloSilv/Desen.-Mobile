<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaginaInicial">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="212dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chatgpt_image_may_22__2025__04_42_53_am" />

    <TextView
        android:id="@+id/textViewBoasVindas"
        android:layout_width="241dp"
        android:layout_height="167dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="112dp"
        android:fontFamily="serif"
        android:text="Bem vindo ao My Academy Tracker, seu aplicativo de organizção acadêmica!"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/buttonCadastro"
        android:layout_width="183dp"
        android:layout_height="74dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#E79627"
        android:fontFamily="serif"
        android:text="Cadastro"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        app:layout_constraintVertical_bias="0.423" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="183dp"
        android:layout_height="74dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#E79627"
        android:fontFamily="serif"
        android:text="Acesse sua conta"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBoasVindas" />

</androidx.constraintlayout.widget.ConstraintLayout>